<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="sdcrew.Views.ViewHelpers.Themes.blueTheme"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <Color x:Key="PrimaryTintColor">#18334C</Color>
    <Color x:Key="NavigationBarColor">#18334C</Color>

    <Style
        x:Key="PageStyle"
        BaseResourceKey="BodyStyle"
        TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="#BF000000" />
    </Style>


    <!--  Implicit Styles  -->
    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="#FFFFFF" />
    </Style>


    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="BorderRadius" Value="5" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="BackgroundColor" Value="#0076C0" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="Medium" />
    </Style>

    <Style x:Key="StackStyle" TargetType="StackLayout">
        <Setter Property="Padding">
            <Setter.Value>
                <OnPlatform
                    x:TypeArguments="Thickness"
                    Android="8, 8, 8, 8"
                    iOS="10, 10, 10, 10" />
            </Setter.Value>
        </Setter>
    </Style>




</ResourceDictionary>