<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="sdcrew.Views.Postflight.PostflightDetails"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:control="clr-namespace:Plugin.Segmented.Control;assembly=Plugin.Segmented"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:CC="clr-namespace:sdcrew.Views.ViewHelpers.Renderers"
    xmlns:SegMentControl="clr-namespace:Plugin.Segmented.Control;assembly=Plugin.Segmented"
    xmlns:behaviors="http://xamarin.com/schemas/2020/toolkit"
    xmlns:subView="clr-namespace:sdcrew.Views.Postflight.SubViews"
    xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    BackgroundColor="{StaticResource NavigationBarColor}">


    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="NameLabel" TargetType="Label">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
            </Style>

            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
            </Style>

            <Style x:Key="imageLableStackLayout" TargetType="StackLayout">
                <Setter Property="Orientation" Value="Horizontal" />
            </Style>

            <Style x:Key="detailsStackLayout" TargetType="StackLayout">
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="VerticalOptions" Value="FillAndExpand" />
                <Setter Property="Spacing" Value="2" />
            </Style>

            <Style x:Key="imageStyle" TargetType="Image">
                <Setter Property="WidthRequest" Value="8" />
                <Setter Property="HeightRequest" Value="8" />
            </Style>

            <Style x:Key="profileImageStyle" TargetType="Image">
                <Setter Property="WidthRequest" Value="80" />
                <Setter Property="HeightRequest" Value="60" />
                <Setter Property="Aspect" Value="AspectFit" />
            </Style>

            <Style x:Key="profileImageFrameStyle" TargetType="Frame">
                <Setter Property="CornerRadius" Value="5" />
                <Setter Property="Margin" Value="0" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="IsClippedToBounds" Value="True" />
            </Style>

            <Style x:Key="FrameCardViewStyle" TargetType="Frame">
                <Setter Property="CornerRadius" Value="5" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="BorderColor" Value="{StaticResource TransparentColor}" />
            </Style>

            <Style x:Key="itemsInsideCardViewStackLayoutStyle" TargetType="StackLayout">
                <Setter Property="Orientation" Value="Horizontal" />
                <Setter Property="Spacing" Value="8" />
            </Style>

            <Style x:Key="itemsCardViewStackLayoutStyle" TargetType="StackLayout">
                <Setter Property="Margin" Value="5" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="Spacing" Value="8" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <AbsoluteLayout x:Name="pfDetailControls">

            <StackLayout
                x:Name="contentPage"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All">

                <!--  Navbar  -->
                <StackLayout
                    BackgroundColor="{StaticResource TabviewBg}" VerticalOptions="End"
                    Orientation="Horizontal" HeightRequest="250"
                    Spacing="8">
                    <!--<StackLayout.Margin>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="iOS" Value="0,20,0,0" />
                        </OnPlatform>
                    </StackLayout.Margin>-->

                    <!--Back Button-->
                    <Image

                            Margin="0,4,0,0"
                            Aspect="AspectFit"
                            HeightRequest="20"
                            HorizontalOptions="CenterAndExpand"
                            Source="icoBackBig"
                            VerticalOptions="CenterAndExpand">

                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="btnBack" Tapped="btnBack_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>

                    <!--  Column 1  123 flight Details-->
                    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0">

                        <Label
                                x:Name="lblTail"
                                FontSize="10"
                                HorizontalOptions="StartAndExpand"
                                Text="TailNumber"
                                TextColor="{StaticResource PrimaryTextColor}" />

                        <Label
                                x:Name="lblDepartHeader"
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="StartAndExpand"
                                Text="Depart"
                                TextColor="{StaticResource PrimaryTextColor}"
                                VerticalOptions="StartAndExpand" />

                        <Label
                                x:Name="lblDepartDate"
                                FontSize="10"
                                HorizontalOptions="StartAndExpand"
                                Text="TailNumber"
                                TextColor="{StaticResource PrimaryTextColor}" />

                    </StackLayout>

                    <!--  Col 2 Icon  -->
                    <Label  Margin="0,10,0,0"
                            x:Name="lblIconHeader"
                            FontFamily="{StaticResource customfonts}"
                            FontSize="22"
                            HorizontalOptions="CenterAndExpand"
                            Text="&#xE806;"
                            TextColor="{Binding color}"
                            VerticalOptions="CenterAndExpand" />

                    <!--  Col 3  -->
                    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0">

                        <Label
                                x:Name="lblTripId"
                                FontSize="10"
                                HorizontalOptions="StartAndExpand"
                                Text="TripID"
                                TextColor="{StaticResource PrimaryTextColor}" />

                        <Label
                                x:Name="lblArrivalHeader"
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="StartAndExpand"
                                TextColor="{StaticResource PrimaryTextColor}"
                                VerticalOptions="StartAndExpand" />

                        <Label
                                x:Name="lblArrivalDate"
                                FontSize="10"
                                HorizontalOptions="StartAndExpand"
                                TextColor="{StaticResource PrimaryTextColor}" />

                    </StackLayout>

                    <StackLayout
                            Margin="10,10,0,0"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand">
                        <Label x:Name="logoSynchStatus"
                            FontFamily="{StaticResource customfonts}"
                            FontSize="18"
                            HorizontalOptions="CenterAndExpand"
                            Text="&#xE804;"
                            TextColor="{StaticResource SubTitleColor}" />
                        <Label x:Name="lblSyncStatus"
                            FontFamily="{StaticResource customfonts}"
                            FontSize="10"
                            Text="Synced"
                            TextColor="{StaticResource PrimaryToolbarButton}" />
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="btnSync_Tapped" x:Name="btnSync" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>

                </StackLayout>

                <!--  HeaderCollectionView  -->
                <StackLayout x:Name="postflighSubNav"
                    Margin="0,-10,0,0"
                    BackgroundColor="{StaticResource NavigationBarColor}"
                    HeightRequest="60"
                    VerticalOptions="StartAndExpand">

                    <StackLayout Margin="0,0,10,0" Orientation="Horizontal">

                        <CollectionView
                            x:Name="collectionViewListHorizontal"
                            Margin="10,15,0,0"
                            BackgroundColor="{StaticResource TransparentColor}"
                            HeightRequest="34"
                            HorizontalOptions="FillAndExpand"
                            HorizontalScrollBarVisibility="Never"
                            ItemSizingStrategy="MeasureAllItems"
                            SelectionMode="None"
                            VerticalOptions="CenterAndExpand"
                            VerticalScrollBarVisibility="Never">



                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal" />
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>


                                    <StackLayout Orientation="Horizontal">

                                        <Frame
                                            x:Name="{Binding TabIndex}"
                                            Margin="5,0,5,0"
                                            Padding="5"
                                            BackgroundColor="{Binding TabColor}"
                                            BorderColor="{StaticResource TransparentColor}"
                                            CornerRadius="15"
                                            HasShadow="False"
                                            HorizontalOptions="FillAndExpand">

                                            <Label
                                                Margin="10,0,10,0"
                                                FontSize="10"
                                                HorizontalOptions="CenterAndExpand"
                                                Text="{Binding TabHeader}"
                                                TextColor="{StaticResource PrimaryTextColor}"
                                                VerticalOptions="CenterAndExpand" />

                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    x:Name="HeaderSubNav"
                                                    CommandParameter="{Binding TabHeader}"
                                                    NumberOfTapsRequired="1"
                                                    Tapped="HeaderSubNav_Tapped" />
                                            </Frame.GestureRecognizers>

                                        </Frame>

                                    </StackLayout>

                                </DataTemplate>


                            </CollectionView.ItemTemplate>

                        </CollectionView>
                    </StackLayout>

                </StackLayout>


                <!--  ALLTABS  -->
                <ScrollView
                    x:Name="DetailTabs"
                    HorizontalOptions="FillAndExpand"
                    HorizontalScrollBarVisibility="Never"
                    VerticalOptions="StartAndExpand"
                    VerticalScrollBarVisibility="Never">

                    <StackLayout x:Name="TabStack" Margin="5,0,5,0"
                                 Spacing="8">


                        <!--OOOI-->
                        <Frame
                            x:Name="OOOI"
                            Margin="5" BorderColor="{StaticResource TransparentColor}" Padding="0"
                            BackgroundColor="{StaticResource CardBGColor}"
                            CornerRadius="10"
                            VerticalOptions="FillAndExpand">

                            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>


                                <behaviors:Expander Grid.Column="1" IsExpanded="False">
                                    <!--  Header  -->
                                    <behaviors:Expander.Header>


                                        <StackLayout Margin="0,0,0,10">
                                            <!--  Card Name  -->
                                            <StackLayout
                                                Grid.Column="0"
                                                Margin="5,10,10,0"
                                                HorizontalOptions="FillAndExpand"
                                                Orientation="Horizontal"
                                                VerticalOptions="Center">

                                                <Label
                                                    BackgroundColor="{Binding HeadeTextBGColor}"
                                                    FontAttributes="Bold"
                                                    FontFamily="{StaticResource customfonts}"
                                                    FontSize="17"
                                                    HorizontalOptions="StartAndExpand"
                                                    Text="OOOI"
                                                    TextColor="{StaticResource PrimaryTextColor}"
                                                    VerticalOptions="CenterAndExpand" />

                                                <Image
                                                    Aspect="AspectFit"
                                                    HeightRequest="7"
                                                    HorizontalOptions="EndAndExpand"
                                                    Source="arrow_a"
                                                    VerticalOptions="Center" />

                                            </StackLayout>

                                            <Grid Margin="0,10,10,0" HorizontalOptions="FillAndExpand" CompressedLayout.IsHeadless="True">

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />

                                                </Grid.RowDefinitions>

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="2.5*" />
                                                    <ColumnDefinition Width="1.5*" />
                                                </Grid.ColumnDefinitions>

                                                <!--  Row0  -->
                                                <!--  Col0  -->
                                                <StackLayout
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    Spacing="5">
                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        Text="Depart"
                                                        TextColor="{StaticResource PrimaryTextColor}" />

                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        x:Name="lblDepartOooi"
                                                        TextColor="{StaticResource PrimaryTextColor}" />

                                                </StackLayout>

                                                <!--  Col4  -->
                                                <StackLayout
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    HorizontalOptions="End"
                                                    Orientation="Horizontal"
                                                    Spacing="5">
                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        Text="Arrive"
                                                        TextColor="{StaticResource PrimaryTextColor}" />

                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        x:Name="lblArriveOooi"
                                                        TextColor="{StaticResource PrimaryTextColor}" />

                                                </StackLayout>

                                                <!--  Row1  -->
                                                <!--  Col0  Oooi Out-->
                                                <StackLayout
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    Spacing="5">
                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        Text="Out"
                                                        TextColor="{StaticResource PrimaryTextColor}" />

                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        x:Name="lblOooiOut"
                                                        TextColor="{StaticResource GreenTextColor}" />

                                                </StackLayout>

                                                <!--  Col1 Oooi Block -->
                                                <StackLayout
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    Spacing="5">
                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        Text="Block Time  "
                                                        TextColor="{StaticResource PrimaryTextColor}" />

                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        x:Name="lblOooiBlockTime"
                                                        TextColor="{StaticResource PrimaryTextColor}" />

                                                </StackLayout>

                                                <!--  Col2  Oooi in-->
                                                <StackLayout
                                                    Grid.Row="1"
                                                    Grid.Column="2"
                                                    HorizontalOptions="End"
                                                    Orientation="Horizontal"
                                                    Spacing="5">
                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        Text="In"
                                                        TextColor="{StaticResource PrimaryTextColor}" />

                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        x:Name="lblOooiIn"
                                                        TextColor="{StaticResource GreenTextColor}" />

                                                </StackLayout>

                                                <!--  Row2  -->
                                                <!--  Col0  Off-->
                                                <StackLayout
                                                    Grid.Row="2"
                                                    Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    Spacing="5">
                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        Text="Off"
                                                        TextColor="{StaticResource PrimaryTextColor}" />

                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        x:Name="lblOooiOff"
                                                        TextColor="{StaticResource GreenTextColor}" />

                                                </StackLayout>

                                                <!--  Col1 FlightTime -->
                                                <StackLayout
                                                    Grid.Row="2"
                                                    Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    Spacing="5">
                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        Text="Flight Time  "
                                                        TextColor="{StaticResource PrimaryTextColor}" />

                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        x:Name="lblOooiFlightTime"
                                                        TextColor="{StaticResource PrimaryTextColor}" />

                                                </StackLayout>

                                                <!--  Col2 On Oooi -->
                                                <StackLayout
                                                    Grid.Row="2"
                                                    Grid.Column="2"
                                                    HorizontalOptions="End"
                                                    Orientation="Horizontal"
                                                    Spacing="5">
                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        Text="On"
                                                        TextColor="{StaticResource PrimaryTextColor}" />

                                                    <Label
                                                        Margin="5,0,0,0"
                                                        FontSize="10"
                                                        x:Name="lblOooiOn"
                                                        TextColor="{StaticResource GreenTextColor}" />

                                                </StackLayout>
                                            </Grid>
                                        </StackLayout>


                                    </behaviors:Expander.Header>

                                    <!--  Body  -->
                                    <Grid CompressedLayout.IsHeadless="True"
                                        Margin="0,10,10,10"
                                        
                                        HorizontalOptions="FillAndExpand">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />

                                        </Grid.RowDefinitions>


                                        <!--  Row 0  -->
                                        <!--  Col 0 Dropdoown Depart -->
                                        <pv:PancakeView
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            BackgroundColor="DarkCyan"
                                            CornerRadius="5,5,0,0">

                                            <StackLayout Margin="5,5,5,0">

                                                <Label
                                                    FontSize="9"
                                                    HorizontalOptions="StartAndExpand"
                                                    Text="Departure ICAO"
                                                    TextColor="{StaticResource PrimaryTextColor}" />


                                                <StackLayout Orientation="Horizontal">

                                                    <Label
                                                        FontSize="15"
                                                        HorizontalOptions="StartAndExpand"
                                                        x:Name="dropdownDepartOooi"
                                                        TextColor="{StaticResource PrimaryTextColor}" />
                                                    <Image
                                                        Aspect="AspectFit"
                                                        HeightRequest="7"
                                                        HorizontalOptions="EndAndExpand"
                                                        Source="arrow_a"
                                                        VerticalOptions="Center" />
                                                </StackLayout>

                                                <BoxView
                                                    HeightRequest="1"
                                                    VerticalOptions="End"
                                                    Color="{StaticResource SecondaryTextColor}" />

                                                <StackLayout.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="dropdwnOooiDepart_Tapped"/>
                                                </StackLayout.GestureRecognizers>

                                            </StackLayout>
                                        </pv:PancakeView>


                                        <!--  Col 1 Dropdown Arrive  -->
                                        <pv:PancakeView
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            BackgroundColor="DarkCyan"
                                            CornerRadius="5,5,0,0">

                                            <StackLayout Margin="5,5,5,0">

                                                <Label
                                                    FontSize="9"
                                                    HorizontalOptions="StartAndExpand"
                                                    Text="Arrival ICAO"
                                                    TextColor="{StaticResource PrimaryTextColor}" />


                                                <StackLayout Orientation="Horizontal">

                                                    <Label
                                                        FontSize="15"
                                                        HorizontalOptions="StartAndExpand"
                                                        x:Name="dropdownArriveOooi"
                                                        TextColor="{StaticResource PrimaryTextColor}" />
                                                    <Image
                                                        Aspect="AspectFit"
                                                        HeightRequest="7"
                                                        HorizontalOptions="EndAndExpand"
                                                        Source="arrow_a"
                                                        VerticalOptions="Center" />
                                                </StackLayout>

                                                <BoxView
                                                    HeightRequest="1"
                                                    VerticalOptions="End"
                                                    Color="{StaticResource SecondaryTextColor}" />

                                                <StackLayout.GestureRecognizers>
                                                    <TapGestureRecognizer x:Name="drpDwnOooiArrive" Tapped="drpDwnOooiArrive_Tapped"/>
                                                </StackLayout.GestureRecognizers>

                                            </StackLayout>

                                        </pv:PancakeView>

                                        <!--  Row 1  -->
                                        <!--  Col  Picker DepartDate-->
                                        <pv:PancakeView
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Margin="0,10,0,0"
                                            BackgroundColor="DarkCyan"
                                            CornerRadius="5,5,0,0">

                                            <StackLayout Margin="5,5,5,0">

                                                <Label
                                                    FontSize="9"
                                                    HorizontalOptions="StartAndExpand"
                                                    Text="Departure Date"
                                                    TextColor="{StaticResource PrimaryTextColor}" />


                                                <CC:BorderlessDatePicker
                                                    x:Name="pickerDepartDateOooi"
                                                    FontSize="15" HorizontalOptions="FillAndExpand"
                                                    Format="D"
                                                    TextColor="{StaticResource PrimaryTextColor}" />

                                                <BoxView
                                                    HeightRequest="1"
                                                    VerticalOptions="End" 
                                                    Color="{StaticResource SecondaryTextColor}" />

                                            </StackLayout>

                                        </pv:PancakeView>


                                        <!--  Row 2  -->
                                        <!--  Col  Picker Arrive Date-->
                                        <pv:PancakeView
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Margin="0,10,0,0"
                                            BackgroundColor="DarkCyan"
                                            CornerRadius="5,5,0,0">

                                            <StackLayout Margin="5,5,5,0">

                                                <Label
                                                    FontSize="9"
                                                    HorizontalOptions="StartAndExpand"
                                                    Text="Arrival Date"
                                                    TextColor="{StaticResource PrimaryTextColor}" />


                                                <CC:BorderlessDatePicker
                                                    x:Name="pickerArriveDateOooi"
                                                    FontSize="15" HorizontalOptions="FillAndExpand"
                                                    Format="D"
                                                    TextColor="{StaticResource PrimaryTextColor}" />

                                                <BoxView
                                                    HeightRequest="1"
                                                    VerticalOptions="End" 
                                                    Color="{StaticResource SecondaryTextColor}" />

                                            </StackLayout>
                                        </pv:PancakeView>


                                        <!--Row 3 Out-->
                                        <!--Col 0-->
                                        <pv:PancakeView
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            BackgroundColor="DarkCyan"
                                            CornerRadius="5,5,0,0">

                                            <StackLayout Margin="5,5,5,0">

                                                <Label
                                                    FontSize="10"
                                                    HorizontalOptions="StartAndExpand">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="Out" TextColor="{StaticResource PrimaryTextColor}"/>
                                                            <Span Text="*" TextColor="Red"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>

                                                <StackLayout Orientation="Horizontal">
                                                    <CC:BorderlessEntry Keyboard="Numeric" behaviors:VisualFeedbackEffect.FeedbackColor="Black" TextColor="{StaticResource GreenTextColor}"
                                                                        x:Name="txtOooiOut" WidthRequest="120" HorizontalOptions="StartAndExpand"
                                                                        FontSize="15" VerticalOptions="End" TextChanged="OooiTextChanged">

                                                        <CC:BorderlessEntry.Behaviors>
                                                            <behaviors:MaskedBehavior Mask="XX:XX"/>
                                                        </CC:BorderlessEntry.Behaviors>

                                                    </CC:BorderlessEntry>
                                                    <Image Source="icoRefresh" x:Name="restoreOooiData1" Aspect="AspectFit" HeightRequest="15" WidthRequest="40" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand" IsVisible="False">
                                                        <Image.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="restoreOooiData_Tapped"/>
                                                        </Image.GestureRecognizers>
                                                    </Image>
                                                </StackLayout>

                                                <BoxView
                                                    HeightRequest="1"
                                                    VerticalOptions="End"
                                                    Color="{StaticResource SecondaryTextColor}" />
                                                <StackLayout Orientation="Horizontal">

                                                    <Label Text="Taxi:" TextColor="{StaticResource PrimaryTextColor}" FontSize="10" VerticalOptions="StartAndExpand"/>

                                                    <Label x:Name="lblTaxiTime" TextColor="{StaticResource PrimaryTextColor}" FontSize="10" VerticalOptions="StartAndExpand"/>

                                                </StackLayout>

                                            </StackLayout>
                                        </pv:PancakeView>

                                        <!--  Col 1  Off-->
                                        <pv:PancakeView
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            BackgroundColor="DarkCyan"
                                            CornerRadius="5,5,0,0">

                                            <StackLayout Margin="5,5,5,0">

                                                <Label
                                                    FontSize="10"
                                                    HorizontalOptions="StartAndExpand">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="Off" TextColor="{StaticResource PrimaryTextColor}"/>
                                                            <Span Text="*" TextColor="Red"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>

                                                <StackLayout Orientation="Horizontal">
                                                    <CC:BorderlessEntry Keyboard="Numeric" TextColor="{StaticResource GreenTextColor}" x:Name="txtOooiOff" WidthRequest="120" HorizontalOptions="StartAndExpand" FontSize="15" VerticalOptions="End" TextChanged="OooiTextChanged">
                                                        <CC:BorderlessEntry.Behaviors>
                                                            <behaviors:MaskedBehavior Mask="XX:XX"/>
                                                        </CC:BorderlessEntry.Behaviors>
                                                    </CC:BorderlessEntry>
                                                    <Image Source="icoRefresh" x:Name="restoreOooiData2" Aspect="AspectFit" HeightRequest="15" WidthRequest="40" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand" IsVisible="False">
                                                        <Image.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="restoreOooiData_Tapped"/>
                                                        </Image.GestureRecognizers>
                                                    </Image>
                                                </StackLayout>

                                                <BoxView
                                                    HeightRequest="1"
                                                    VerticalOptions="End"
                                                    Color="{StaticResource SecondaryTextColor}" />
                                            </StackLayout>

                                        </pv:PancakeView>

                                        <!--Row 4-->
                                        <!--Col 0 On-->
                                        <pv:PancakeView
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            BackgroundColor="DarkCyan"
                                            CornerRadius="5,5,0,0">

                                            <StackLayout Margin="5,5,5,0">

                                                <Label
                                                    FontSize="10"
                                                    HorizontalOptions="StartAndExpand">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="On" TextColor="{StaticResource PrimaryTextColor}"/>
                                                            <Span Text="*" TextColor="Red"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>

                                                <StackLayout Orientation="Horizontal">
