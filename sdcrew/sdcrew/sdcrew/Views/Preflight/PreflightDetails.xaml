<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="sdcrew.Views.Preflight.PreflightDetails"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:SegMentControl="clr-namespace:Plugin.Segmented.Control;assembly=Plugin.Segmented"
    BackgroundColor="{StaticResource NavigationBarColor}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="NameLabel" TargetType="Label">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
            </Style>

            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
            </Style>

            <Style x:Key="imageLableStackLayout" TargetType="StackLayout">
                <Setter Property="Orientation" Value="Horizontal" />
            </Style>

            <Style x:Key="detailsStackLayout" TargetType="StackLayout">
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="VerticalOptions" Value="FillAndExpand" />
                <Setter Property="Spacing" Value="2" />
            </Style>

            <Style x:Key="imageStyle" TargetType="Image">
                <Setter Property="WidthRequest" Value="8" />
                <Setter Property="HeightRequest" Value="8" />
            </Style>

            <Style x:Key="profileImageStyle" TargetType="Image">
                <Setter Property="WidthRequest" Value="80" />
                <Setter Property="HeightRequest" Value="60" />
                <Setter Property="Aspect" Value="AspectFit" />
            </Style>

            <Style x:Key="profileImageFrameStyle" TargetType="Frame">
                <Setter Property="CornerRadius" Value="5" />
                <Setter Property="Margin" Value="0" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="IsClippedToBounds" Value="True" />
            </Style>

            <Style x:Key="FrameCardViewStyle" TargetType="Frame">
                <Setter Property="CornerRadius" Value="5" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="BorderColor" Value="{StaticResource TransparentColor}" />
            </Style>

            <Style x:Key="itemsInsideCardViewStackLayoutStyle" TargetType="StackLayout">
                <Setter Property="Orientation" Value="Horizontal" />
                <Setter Property="Spacing" Value="8" />
            </Style>

            <Style x:Key="itemsCardViewStackLayoutStyle" TargetType="StackLayout">
                <Setter Property="Margin" Value="5" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="Spacing" Value="8" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>


        <AbsoluteLayout>

            <StackLayout
                x:Name="contentPage"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All">

                <!--  Navbar  -->
                <StackLayout
                    BackgroundColor="{StaticResource TabviewBg}"
                    HeightRequest="200"
                    Orientation="Horizontal"
                    Spacing="8">



                    <Grid
                        x:Name="PreflightDetailsNav"
                        Margin="0,30,10,0"
                        Padding="10"
                        VerticalOptions="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".6*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width=".8*" />
                            <ColumnDefinition Width="1.4*" />
                            <ColumnDefinition Width=".46*" />
                        </Grid.ColumnDefinitions>

                        <StackLayout
                            Grid.Column="0"
                            Margin="0,4,0,0"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="Start">

                            <Label
                                FontFamily="{StaticResource customfonts}"
                                FontSize="18"
                                HorizontalOptions="StartAndExpand"
                                Text="&#xE80C;"
                                TextColor="{StaticResource PrimaryTextColor}" />

                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer x:Name="btnBack" Tapped="btnBack_Tapped" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <Label
                            x:Name="lblDepartHeader"
                            Grid.Column="1"
                            FontAttributes="Bold"
                            FontSize="18"
                            HorizontalOptions="CenterAndExpand"
                            Text="Depart"
                            TextColor="{StaticResource PrimaryTextColor}"
                            VerticalOptions="StartAndExpand" />

                        <StackLayout Grid.Column="2" VerticalOptions="StartAndExpand">

                            <Label
                                x:Name="lblIconHeader"
                                FontFamily="{StaticResource customfonts}"
                                FontSize="22"
                                HorizontalOptions="CenterAndExpand"
                                Text="&#xE806;"
                                TextColor="{Binding color}"
                                VerticalOptions="CenterAndExpand" />

                            <Label
                                x:Name="lblAircraftTail"
                                FontSize="10"
                                HorizontalOptions="CenterAndExpand"
                                Text="TailNumber"
                                TextColor="{StaticResource PrimaryTextColor}" />

                        </StackLayout>

                        <Label
                            x:Name="lblArrivalHeader"
                            Grid.Column="3"
                            FontAttributes="Bold"
                            FontSize="18"
                            HorizontalOptions="CenterAndExpand"
                            Text="Arrival"
                            TextColor="{StaticResource PrimaryTextColor}"
                            VerticalOptions="StartAndExpand" />

                        <StackLayout
                            Grid.Column="4"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="StartAndExpand">
                            <Label
                                FontFamily="{StaticResource customfonts}"
                                FontSize="18"
                                HorizontalOptions="CenterAndExpand"
                                Text="&#xE804;"
                                TextColor="{StaticResource SubTitleColor}" />
                            <Label
                                FontAttributes="Bold"
                                FontFamily="{StaticResource customfonts}"
                                FontSize="8"
                                Text="Synced"
                                TextColor="{StaticResource PrimaryToolbarButton}" />
                        </StackLayout>


                    </Grid>

                </StackLayout>





                <!--  HeaderCollectionView  -->
                <StackLayout
                    Margin="0,-10,0,0"
                    BackgroundColor="{StaticResource NavigationBarColor}"
                    HeightRequest="75"
                    VerticalOptions="StartAndExpand">


                    <!--  Subnavbar  -->
                    <CollectionView
                        x:Name="collectionViewListHorizontal"
                        Margin="0,10,0,0"
                        BackgroundColor="{StaticResource TransparentColor}"
                        FlexLayout.AlignSelf="Auto"
                        HeightRequest="40"
                        HorizontalOptions="FillAndExpand"
                        HorizontalScrollBarVisibility="Never"
                        IsTabStop="True"
                        ItemSizingStrategy="MeasureAllItems"
                        SelectionMode="None"
                        VerticalOptions="CenterAndExpand"
                        VerticalScrollBarVisibility="Never">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>

                                <Frame
                                    x:Name="{Binding TabIndex}"
                                    Margin="30,15,20,15"
                                    Padding="1"
                                    BackgroundColor="{Binding TabColor}"
                                    BorderColor="{StaticResource TransparentColor}"
                                    CornerRadius="14"
                                    HasShadow="True"
                                    HeightRequest="14"
                                    HorizontalOptions="FillAndExpand">

                                    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">

                                        <Label
                                            FontSize="14"
                                            Text="{Binding TabHeader}"
                                            TextColor="{StaticResource PrimaryTextColor}" />

                                    </StackLayout>

                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer
                                            CommandParameter="{Binding TabHeader}"
                                            NumberOfTapsRequired="1"
                                            Tapped="TapGestureRecognizer_Tapped" />

                                    </Frame.GestureRecognizers>

                                </Frame>

                            </DataTemplate>


                        </CollectionView.ItemTemplate>

                    </CollectionView>

                </StackLayout>


                <!--  ALLTABS  -->
                <ScrollView
                    x:Name="DetailTabs"
                    Margin="0,0,0,0"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">

                    <StackLayout
                        x:Name="TabStack"
                        Margin="5,0,5,0"
                        Spacing="8">

                        <!--  FLIGHT  -->
                        <Frame
                            x:Name="FLIGHT"
                            Margin="5"
                            BackgroundColor="{StaticResource HeaderItemBg}"
                            BorderColor="{StaticResource TransparentColor}"
                            CornerRadius="11"
                            Style="{StaticResource FrameCardViewStyle}"
                            Visual="Default">

                            <StackLayout
                                Grid.Row="0"
                                Margin="5"
                                Padding="5">

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="FLIGHT"
                                    TextColor="{StaticResource PrimaryTextColor}" />

                                <StackLayout Orientation="Horizontal">

                                    <Label
                                        FontSize="12"
                                        HorizontalOptions="StartAndExpand"
                                        Text="Flight Information"
                                        TextColor="{StaticResource PrimaryTextColor}" />

                                    <Label
                                        x:Name="lblFlightTripID"
                                        FontSize="12"
                                        HorizontalOptions="EndAndExpand"
                                        TextColor="{StaticResource PrimaryTextColor}" />
                                    <!--  Text="Trip ID 123213-3"  -->
                                </StackLayout>


                                <!--  ICAOS  -->
                                <!--  Icao Header  -->
                                <StackLayout Margin="0,6,0,0" Orientation="Horizontal">

                                    <Label
                                        FontSize="11"
                                        HorizontalOptions="StartAndExpand"
                                        Text="DEPARTURE"
                                        TextColor="{StaticResource PrimaryTextColor}" />

                                    <Label
                                        FontSize="11"
                                        HorizontalOptions="EndAndExpand"
                                        Text="ARRIVAL"
                                        TextColor="{StaticResource PrimaryTextColor}" />
                                </StackLayout>

                                <StackLayout Orientation="Horizontal">

                                    <Label
                                        x:Name="lblDepartureICAO"
                                        FontSize="14"
                                        HorizontalOptions="StartAndExpand"
                                        Text="DEPARTUREICAO"
                                        TextColor="{StaticResource PrimaryTextColor}" />

                                    <Label
                                        x:Name="lblArrivalICAO"
                                        FontSize="14"
                                        HorizontalOptions="EndAndExpand"
                                        Text="ARRIVALICAO"
                                        TextColor="{StaticResource PrimaryTextColor}" />
                                </StackLayout>


                                <!--  Dates  -->
                                <StackLayout Orientation="Horizontal">

                                    <StackLayout HorizontalOptions="StartAndExpand">

                                        <Label
                                            x:Name="lblDepartureDate"
                                            FontSize="14"
                                            HorizontalOptions="StartAndExpand"
                                            Text="DEPARTUREDate"
                                            TextColor="{StaticResource PrimaryTextColor}"
                                            TextTransform="Uppercase" />

                                        <Label
                                            x:Name="lblDepartureTime"
                                            FontSize="14"
                                            HorizontalOptions="StartAndExpand"
                                            Text="DEPARTURETime"
                                            TextColor="{StaticResource PrimaryTextColor}" />

                                    </StackLayout>

                                    <StackLayout HorizontalOptions="CenterAndExpand">

                                        <Label
                                            x:Name="iconFlight"
                                            FontFamily="{StaticResource customfonts}"
                                            FontSize="20"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="&#xE806;"
                                            TextColor="{Binding color}"
                                            VerticalOptions="CenterAndExpand" />

                                        <Label
                                            x:Name="lblETE"
                                            FontSize="12"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="ETE 03:56"
                                            TextColor="{StaticResource PrimaryTextColor}" />

                                    </StackLayout>

                                    <StackLayout HorizontalOptions="EndAndExpand">

                                        <Label
                                            x:Name="lblArrivalDate"
                                            FontSize="14"
                                            HorizontalOptions="EndAndExpand"
                                            Text="ArrivalDate"
                                            TextColor="{StaticResource PrimaryTextColor}"
                                            TextTransform="Uppercase" />

                                        <Label
                                            x:Name="lblArrivalTime"
                                            FontSize="14"
                                            HorizontalOptions="EndAndExpand"
                                            Text="ArrivalTime"
                                            TextColor="{StaticResource PrimaryTextColor}" />

                                    </StackLayout>
                                </StackLayout>

                            </StackLayout>



                        </Frame>

                        <!--  AIRPORTS  -->
                        <Frame
                            x:Name="AIRPORTS"
                            Margin="5"
                            BackgroundColor="{StaticResource HeaderItemBg}"
                            CornerRadius="11"
                            Style="{StaticResource FrameCardViewStyle}">

                            <StackLayout
                                Grid.Row="0"
                                Margin="5"
                                Padding="5">

                                <!--  Header  -->
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="AIRPORTS"
                                    TextColor="{StaticResource PrimaryTextColor}" />
                                <Label
                                    FontSize="12"
                                    Text="FBO Information"
                                    TextColor="{StaticResource PrimaryTextColor}" />

                                <!--  Departure  -->


                                <StackLayout Margin="7,0,0,0" BindingContext="">
                                    <Label
                                        x:Name="lblAirportDepartICAO"
                                        FontAttributes="Bold"
                                        FontSize="13"
                                        Text="KNEW"
                                        TextColor="{StaticResource PrimaryTextColor}" />

                                    <Label
                                        x:Name="lblFboDepartHandlerName"
                                        FontSize="13"
                                        Text="FlightLine First"
                                        TextColor="{StaticResource PrimaryTextColor}" />

                                    <StackLayout Orientation="Horizontal">

                                        <Label
                                            x:Name="lblFboDepartPhone"
                                            FontSize="13"
                                            HorizontalOptions="StartAndExpand"
                                            TextColor="{StaticResource PrimaryTextColor}"
                                            VerticalOptions="CenterAndExpand" />

                                        <Label
                                            x:Name="lblFboDepartCallIcon"
                                            FontFamily="{StaticResource customfonts}"
                                            FontSize="27"
                                            HorizontalOptions="EndAndExpand"
                                            Text="&#xE810;"
                                            TextColor="{StaticResource SubTitleColor}"
                                            VerticalOptions="CenterAndExpand">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer x:Name="btnAirportDepurtureCall" Tapped="btnAirportDepurtureCall_Tapped" />
                                            </Label.GestureRecognizers>
                                        </Label>

                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">

                                        <Label
                                            x:Name="lblFboDepartMail"
                                            FontSize="13"
                                            HorizontalOptions="StartAndExpand"
                                            TextColor="{StaticResource PrimaryTextColor}"
                                            VerticalOptions="CenterAndExpand" />

                                        <Label
                                            x:Name="lblFboDepartMailIcon"
                                            FontFamily="{StaticResource customfonts}"
                                            FontSize="27"
                                            HorizontalOptions="EndAndExpand"
                                            Text="&#xE816;"
                                            TextColor="{StaticResource SubTitleColor}"
                                            VerticalOptions="CenterAndExpand">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer x:Name="btnAirportDepurtureMail" Tapped="btnAirportDepurtureMail_Tapped" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </StackLayout>

                                </StackLayout>

                                <!--  Arrival  -->
                                <StackLayout Margin="7,0,0,0">
                                    <Label
                                        x:Name="lblAirportArrival"
                                        FontAttributes="Bold"
                                        FontSize="13"
                                        Text="KLAX"
                                        TextColor="{StaticResource PrimaryTextColor}" />

                                    <Label
                                        x:Name="lblFboArrivalHandlerName"
                                        FontSize="13"
                                        TextColor="{StaticResource PrimaryTextColor}" />

                                    <StackLayout Orientation="Horizontal">

                                        <Label
                                            x:Name="lblFboArrivalPhone"
                                            FontSize="13"
                                            HorizontalOptions="StartAndExpand"
                                            TextColor="{StaticResource PrimaryTextColor}"
                                            VerticalOptions="CenterAndExpand" />

                                        <Label
                                            x:Name="lblFboArrivalCallIcon"
                                            FontFamily="{StaticResource customfonts}"
                                            FontSize="27"
                                            HorizontalOptions="EndAndExpand"
                                            Text="&#xE810;"
                                            TextColor="{StaticResource SubTitleColor}"
                                            VerticalOptions="CenterAndExpand">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer x:Name="btnAirportArrivalCall" Tapped="btnAirportArrivalCall_Tapped" />
                                            </Label.GestureRecognizers>
                                        </Label>

                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal">

                                        <Label
                                            x:Name="lblFboArrivalMail"
                                            FontSize="13"
                                            HorizontalOptions="StartAndExpand"
                                            TextColor="{StaticResource PrimaryTextColor}"
                                            VerticalOptions="CenterAndExpand" />

                                        <Label
                                            x:Name="lblFboArrivalMailIcon"
                                            FontFamily="{StaticResource customfonts}"
                                            FontSize="27"
                                            HorizontalOptions="EndAndExpand"
                                            Text="&#xE816;"
                                            TextColor="{StaticResource SubTitleColor}"
                                            VerticalOptions="CenterAndExpand">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer x:Name="AirportSendMail" Tapped="AirportSendMail_Tapped" />
                                            </Label.GestureRecognizers>
                                        </Label>

                                    </StackLayout>

                                </StackLayout>

                            </StackLayout>



                        </Frame>

                        <!--  CREWS  -->
                        <Frame
                            x:Name="CREWS"
                            Margin="5"
                            BackgroundColor="{StaticResource HeaderItemBg}"
                            CornerRadius="11"
                            Style="{StaticResource FrameCardViewStyle}">

                            <StackLayout
                                Grid.Row="0"
                                Margin="5"
                                Padding="5">

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="CREW"
                                    TextColor="{StaticResource PrimaryTextColor}" />

                                <StackLayout Orientation="Horizontal">

                                    <Label
                                        FontSize="12"
                                        Text="Total Crew"
                                        TextColor="{StaticResource PrimaryTextColor}" />

                                    <Label
                                        x:Name="lblCrewCount"
                                        FontSize="12"
                                        Text="2"
                                        TextColor="{StaticResource PrimaryTextColor}" />

                                </StackLayout>

                                <CollectionView x:Name="CollectionCrew" HeightRequest="{Binding CrewRowHeigtht}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <!--<ViewCell>-->
                                            <Grid Margin="7,0,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="2*" />
                                                </Grid.RowDefinitions>

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>

                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    FontAttributes="Bold"
                                                    FontSize="13"
                                                    Text="{Binding crewMemberType}"
                                                    TextColor="{StaticResource PrimaryTextColor}" />

                                                <Label
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    FontSize="13"
                                                    Text="{Binding fullName}"
                                                    TextColor="{StaticResource PrimaryTextColor}" />

                                                <Label
                                                    Grid.Row="2"
                                                    Grid.Column="0"
                                                    FontSize="13"
                                                    HorizontalOptions="StartAndExpand"
                                                    Text="{Binding fullPhoneNumber}"
                                                    TextColor="{StaticResource PrimaryTextColor}"
                                                    VerticalOptions="CenterAndExpand" />

                                                <Label
                                                    Grid.Row="2"
                                                    Grid.Column="1"
                                                    FontFamily="{StaticResource customfonts}"
                                                    FontSize="27"
                                                    HorizontalOptions="EndAndExpand"
                                                    IsVisible="{Binding CallVisible}"
                                                    Text="&#xE810;"
                                                    TextColor="{StaticResource SubTitleColor}"
                                                    VerticalOptions="CenterAndExpand">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                            x:Name="crewMakeCall"
                                                            CommandParameter="{Binding fullPhoneNumber}"
                                                            Tapped="crewMakeCall_Tapped" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                            </Grid>

                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                            </StackLayout>
                        </Frame>

                        <!--  <passengers  -->
                        <Frame
                            x:Name="PASSENGERS"
                            Margin="5"
                            BackgroundColor="{StaticResource HeaderItemBg}"
                            CornerRadius="11"
                            Style="{StaticResource FrameCardViewStyle}">

                            <StackLayout
                                Grid.Row="0"
                                Margin="5"
                                Padding="5">

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="PASSENGERS"
                                    TextColor="{StaticResource PrimaryTextColor}" />

                                <StackLayout Orientation="Horizontal">

                                    <StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal">

                                        <Label
                                            FontSize="12"
                                            HorizontalOptions="StartAndExpand"
                                            Text="Total Passengers"
                                            TextColor="{StaticResource PrimaryTextColor}"
                                            VerticalOptions="CenterAndExpand" />

                                        <Label
                                            x:Name="lblPassengerCount"
                                            FontSize="12"
                                            HorizontalOptions="EndAndExpand"
                                            Text="2"
                                            TextColor="{StaticResource PrimaryTextColor}"
                                            VerticalOptions="CenterAndExpand" />

                                    </StackLayout>

                                    <StackLayout HorizontalOptions="EndAndExpand" Orientation="Horizontal">

                                        <Label
                                            FontSize="12"
                                            HorizontalOptions="StartAndExpand"
                                            Text="On Board"
                                            TextColor="{StaticResource PrimaryTextColor}"
                                            VerticalOptions="CenterAndExpand" />

                                        <Label
                                            x:Name="lblPassengerOnboardCount"
                                            FontSize="12"
                                            HorizontalOptions="EndAndExpand"
                                            Text="2"
                                            TextColor="{StaticResource PrimaryTextColor}"
                                            VerticalOptions="CenterAndExpand" />

                                    </StackLayout>

                                </StackLayout>

                                <!--  Passengers  -->


                                <CollectionView
                                    x:Name="CollectionPassenger"
                                    Margin="3,0,0,10"
                                    HeightRequest="{Binding PassengerRowHeigtht}"
                                    VerticalOptions="Start">
                                    <CollectionView.ItemsLayout>
                                        <GridItemsLayout Orientation="Vertical" />
                                    </CollectionView.ItemsLayout>

                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>

                                            <StackLayout HeightRequest="100">

                                                <StackLayout Margin="7,10,0,0" Orientation="Horizontal">
                                                    <Label
                                                        FontFamily="{StaticResource customfonts}"
                                                        FontSize="15"
                                                        HorizontalOptions="Start"
                                                        Text="&#xE817;"
                                                        TextColor="{StaticResource PrimaryTextColor}"
                                                        VerticalOptions="StartAndExpand" />

                                                    <Label
                                                        x:Name="lblPassenger"
                                                        FontSize="13"
                                                        Text="{Binding PassengerName}"
                                                        TextColor="{StaticResource PrimaryTextColor}"
                                                        VerticalOptions="CenterAndExpand" />

                                                </StackLayout>

                                                <!--  Passengers Segment  -->
                                                <StackLayout Margin="7,0,0,0">

                                                    <Label
                                                        FontSize="13"
                                                        Text="Passenger Status"
                                                        TextColor="{StaticResource PrimaryTextColor}" />

                                                    <SegMentControl:SegmentedControl
                                                        x:Name="PassengerSegmentedControl"
                                                        Margin="0,5,0,0"
                                                        BackgroundColor="{StaticResource NavigationBarColor}"
                                                        BorderColor="{StaticResource TransparentColor}"
                                                        DisabledColor="Gray"
                                                        SelectedSegment="{Binding passengerStatusId}"
                                                        SelectedTextColor="{StaticResource NavigationBarColor}"
                                                        TextColor="{StaticResource PrimaryTextColor}"
                                                        TintColor="{StaticResource ButtonBackgroundColor}">
                                                        <SegMentControl:SegmentedControl.Children>
                                                            <SegMentControl:SegmentedControlOption TabIndex="0" Text="Waitlist" />
                                                            <SegMentControl:SegmentedControlOption TabIndex="1" Text="Deadhead" />
                                                            <SegMentControl:SegmentedControlOption TabIndex="2" Text="Onboard" />

                                                        </SegMentControl:SegmentedControl.Children>
                                                    </SegMentControl:SegmentedControl>

                                                    <!--  SelectedSegment="{Binding SegmentSelection}"  -->
                                                </StackLayout>

                                            </StackLayout>

                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>

                        </Frame>

                        <!--  Checklist  -->
                        <Frame
                            x:Name="CHECKLISTS"
                            Margin="5"
                            BackgroundColor="{StaticResource HeaderItemBg}"
                            CornerRadius="11"
                            Style="{StaticResource FrameCardViewStyle}">

                            <StackLayout
                                Grid.Row="0"
                                Margin="5"
                                Padding="5">

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="CHECKLISTS"
                                    TextColor="{StaticResource PrimaryTextColor}" />

                                <!--  PILOT  -->
                                <StackLayout
                                    Margin="7,0,0,0"
                                    Orientation="Horizontal"
                                    VerticalOptions="CenterAndExpand">

                                    <Label
                                        x:Name="lblpilotStatus"
                                        FontFamily="{StaticResource customfonts}"
                                        FontSize="22"
                                        HorizontalOptions="Start"
                                        Text="&#xE80e;"
                                        TextColor="Green"
                                        VerticalOptions="CenterAndExpand" />

                                    <Label
                                        FontSize="14"
                                        HorizontalOptions="StartAndExpand"
                                        Text="Pilot"
                                        TextColor="{StaticResource PrimaryTextColor}"
                                        VerticalOptions="CenterAndExpand" />

                                    <Label
                                        FontFamily="{StaticResource customfonts}"
                                        FontSize="22"
                                        HorizontalOptions="EndAndExpand"
                                        Text="&#xE819;"
                                        TextColor="{StaticResource SubTitleColor}"
                                        VerticalOptions="CenterAndExpand">

                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="btnCheckList_Tapped" />
                                        </Label.GestureRecognizers>

                                    </Label>

                                </StackLayout>

                                <!--  Maintenance  -->
                                <StackLayout
                                    Margin="7,0,0,0"
                                    Orientation="Horizontal"
                                    VerticalOptions="CenterAndExpand">
                                    <Label
                                        x:Name="lblMaintenanceStatus"
                                        FontFamily="{StaticResource customfonts}"
                                        FontSize="22"
                                        HorizontalOptions="Start"
                                        Text="&#xE80e;"
                                        TextColor="Green"
                                        VerticalOptions="CenterAndExpand" />

                                    <Label
                                        FontSize="14"
                                        HorizontalOptions="StartAndExpand"
                                        Text="Maintenance"
                                        TextColor="{StaticResource PrimaryTextColor}"
                                        VerticalOptions="CenterAndExpand" />

                                    <Label
                                        FontFamily="{StaticResource customfonts}"
                                        FontSize="22"
                                        HorizontalOptions="EndAndExpand"
                                        Text="&#xE819;"
                                        TextColor="{StaticResource SubTitleColor}"
                                        VerticalOptions="CenterAndExpand">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="btnCheckList_Tapped" />
                                        </Label.GestureRecognizers>
                                    </Label>

                                </StackLayout>

                                <!--  Scheduling  -->
                                <StackLayout
                                    Margin="7,0,0,0"
                                    Orientation="Horizontal"
                                    VerticalOptions="CenterAndExpand">
                                    <Label
                                        x:Name="lblSchedulingStatus"
                                        FontFamily="{StaticResource customfonts}"
                                        FontSize="22"
                                        HorizontalOptions="Start"
                                        Text="&#xE80e;"
